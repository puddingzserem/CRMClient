<UserControl x:Class="CRMClient.Views.UserListingItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRMClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="20" 
             d:DesignWidth="200"
             MouseDoubleClick="UserControlDoubleClick">
    <Grid Background="White">
        <Ellipse Name="statusDot" Fill="#FF74A923" HorizontalAlignment="Left" Height="11" Margin="7,5,0,0" VerticalAlignment="Top" Width="12" OpacityMask="#FF74A923"/>
        <TextBlock Name="UserIDNumber" HorizontalAlignment="Left" Margin="24,2,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" TextAlignment="Right" Width="24"/>
        <TextBlock Name="UserNameSurname" HorizontalAlignment="Left" Margin="59,3,0,0" TextWrapping="Wrap" Text="Name Surname" VerticalAlignment="Top" Width="138" FontSize="11"/>

    </Grid>
</UserControl>
